{
  "version": "2017-02-28",
  "operation": "Query",
  "query": {
    "expression": "performerId = :performerId",
    "expressionValues": {
      ":performerId": $util.dynamodb.toDynamoDBJson($ctx.args.performerId)
    }
  },
  "index": "performerId-createdAt-index",
  "scanIndexForward": false,
  "limit": #if($ctx.args.limit) $ctx.args.limit #else 50 #end
}
