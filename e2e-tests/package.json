{
  "name": "beatmatchme-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for BeatMatchMe",
  "scripts": {
    "test": "playwright test",
    "test:working": "playwright test tests/*-working.spec.ts --project=chromium",
    "test:dj": "playwright test tests/dj-portal-working.spec.ts --project=chromium",
    "test:user": "playwright test tests/user-portal-working.spec.ts --project=chromium",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:5173"
  },
