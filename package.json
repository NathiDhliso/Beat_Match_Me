{
  "name": "beatmatchme",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "aws/lambda"
  ],
  "scripts": {
    "dev": "npm run dev -w web",
    "dev:web": "npm run dev -w web",
    "dev:mobile": "npm run start -w mobile",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:payment": "jest payment-flow",
    "test:queue": "jest queue-e2e",
    "test:integration": "jest integration.test.js --runInBand",
    "test:integration:verbose": "jest integration.test.js --runInBand --verbose",
    "test:web": "npm run test -w web",
    "aws:setup-test": "pwsh -File infrastructure/tests/setup-test-environment.ps1",
    "aws:cleanup-test": "pwsh -File infrastructure/tests/cleanup-test-environment.ps1",
    "aws:seed-test": "node infrastructure/tests/seed-test-data.js",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "dependencies": {
    "@aws-sdk/client-appsync": "^3.922.0",
    "aws-amplify": "^6.15.7",
    "graphql": "^16.9.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "aws-sdk": "^2.1692.0",
    "aws-sdk-mock": "^6.2.1",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5"
  }
}
